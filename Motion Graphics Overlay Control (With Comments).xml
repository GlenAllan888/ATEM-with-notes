<?xml version="1.0" encoding="UTF-8"?>
          <!--Next two are auto generated by the ATEM. don't change. Also don't change the previous line-->
<Profile majorVersion="1" minorVersion="5" product="ATEM Mini Extreme ISO">
          <!--Next one begins the total macro pool, or all of the macros for the ATEM. don't change-->
    <MacroPool>
          <!--Next one starts a single macro spot. Indices start at 0 not 1. In this example i've deleted all but 1 motion overlay example. 
          Keep the macros in order and never use the same number index twice. You can rename the macro in here as well-->
        <Macro index="1" name="Four Grid Alternate" description="">
          <!--Next four key indices turn off the USKs. Starting with 0 not 1. As in 0 is 1, 1 is 2...-->
            <Op id="KeyOnAir" mixEffectBlockIndex="0" keyIndex="0" onAir="False"/>
            <Op id="KeyOnAir" mixEffectBlockIndex="0" keyIndex="1" onAir="False"/>
            <Op id="KeyOnAir" mixEffectBlockIndex="0" keyIndex="2" onAir="False"/>
            <Op id="KeyOnAir" mixEffectBlockIndex="0" keyIndex="3" onAir="False"/>
          <!--Next two key indices turn off the DSKs. Same rule as above-->
            <Op id="DownstreamKeyOnAir" keyIndex="0" onAir="False"/>
            <Op id="DownstreamKeyOnAir" keyIndex="1" onAir="False"/>
          <!--Next determines the type of key. Luma, Chroma, Pattern, DVE-->
            <Op id="KeyType" mixEffectBlockIndex="0" keyIndex="1" type="Luma"/>
          <!--Next five determine properties of the HyperDeck playback. Index 1 equaly Hyperdeck 2, because it all starts with zero, not 1-->
            <Op id="HyperDeckSetSingleClip" hyperDeckIndex="1" singleClipEnabled="False"/>
            <Op id="HyperDeckSetLoop" hyperDeckIndex="1" loopEnabled="True"/>
            <Op id="HyperDeckSetSourceClipIndex" hyperDeckIndex="1" clipIndex="14"/>
            <Op id="HyperDeckSetSpeed" hyperDeckIndex="1" speedPercent="1"/>
            <Op id="HyperDeckPlay" hyperDeckIndex="1"/>
          <!--Next four determine properties of the Luma Key, can be for any type of key. For luma used in animated overlays this sets the 
          Hyperdeck to premultiplied. The rest isn't important for these overlays-->
            <Op id="LumaKeyPreMultiply" mixEffectBlockIndex="0" keyIndex="1" preMultiply="True"/>
            <Op id="LumaKeyClip" mixEffectBlockIndex="0" keyIndex="1" clip="0.5"/>
            <Op id="LumaKeyGain" mixEffectBlockIndex="0" keyIndex="1" gain="0.699997"/>
            <Op id="LumaKeyInvert" mixEffectBlockIndex="0" keyIndex="1" invert="False"/>
          <!--Next eight determine properties of the Key & Fill of the Hyperdeck. Which key, camera, mask, position, flying or not-->
            <Op id="KeyFillInput" mixEffectBlockIndex="0" keyIndex="1" input="Camera7"/>
            <Op id="KeyCutInput" mixEffectBlockIndex="0" keyIndex="1" input="Camera8"/>
            <Op id="KeyMaskEnable" mixEffectBlockIndex="0" keyIndex="1" enable="False"/>
            <Op id="KeyMaskTop" mixEffectBlockIndex="0" keyIndex="1" top="9"/>
            <Op id="KeyMaskBottom" mixEffectBlockIndex="0" keyIndex="1" bottom="-9.00002"/>
            <Op id="KeyMaskLeft" mixEffectBlockIndex="0" keyIndex="1" left="-16"/>
            <Op id="KeyMaskRight" mixEffectBlockIndex="0" keyIndex="1" right="16"/>
            <Op id="KeyFlyEnable" mixEffectBlockIndex="0" keyIndex="1" enable="False"/>
          <!--Next eight determine properties of HyperDeck playback again. Which hyperdeck, which clip, what speed. Again starting from 0 not 1-->
            <Op id="HyperDeckSetSourceClipIndex" hyperDeckIndex="2" clipIndex="11"/>
            <Op id="HyperDeckSetSpeed" hyperDeckIndex="2" speedPercent="1"/>
          <!--Next one adds a pause to the macro, in frames. Can be added whenever the macro need to wait before moving to the next step-->
            <Op id="MacroSleep" frames="8"/>
          <!--Next one tells the hyperdeck to play based on number. Again starting at index 0 not 1-->
            <Op id="HyperDeckPlay" hyperDeckIndex="2"/>
          <!--Next one turns a key on based on index-->
            <Op id="KeyOnAir" mixEffectBlockIndex="0" keyIndex="1" onAir="True"/>
          <!--Next one adds a pause to the macro, in frames. Longer pauses wait for a clip to play a certain amount-->
            <Op id="MacroSleep" frames="180"/>
          <!--Next one sends a command to stop playback, effectively pausing the video as a still frame-->
            <Op id="HyperDeckStop" hyperDeckIndex="2"/>
          <!--Next one ends the current macro-->
        </Macro>
          <!--Next one ends the total macro pool, or all of the macros for the ATEM. don't change-->
    </MacroPool>
          <!--Next one sets whether the macro pool loops. Useful if you are just playing videos-->
    <MacroControl loop="False"/>
          <!--Next one is auto generated by the ATEM. don't change-->
</Profile>
